vim Makefile.marvel

CC=gcc
OBJ = marvel.o
EXE = marvel.exe

%.o: %.c 
	$(CC) -c -o $@ $<

$(EXE): $(OBJ)
	$(CC) -o $@ $^

.PHONY: clean

clean:
	/bin/rm -f $(OBJ) $(EXE)

vim marvel.c
#include <stdio.h>

